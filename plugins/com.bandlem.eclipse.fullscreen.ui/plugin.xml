<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="com.bandlem.eclipse.fullscreen.ui.Startup"></startup>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="org.eclipse.ui.category.window"
            description="Toggle Full Screen"
            id="com.bandlem.eclipse.fullscreen.ui.ToggleFullScreen"
            name="Toggle Full Screen">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:window?after=newEditor">
                           <command
                                 commandId="com.bandlem.eclipse.fullscreen.ui.ToggleFullScreen">
                           </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="com.bandlem.eclipse.fullscreen.ui.ToggleFullScreen"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="CTRL+COMMAND+F">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.bandlem.eclipse.fullscreen.ui.ToggleFullScreenHandler"
            commandId="com.bandlem.eclipse.fullscreen.ui.ToggleFullScreen">
      </handler>
   </extension>

</plugin>
